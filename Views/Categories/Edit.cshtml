@model SystemZarzadzaniaFinansami.Models.Category

<h1>Edytuj Kategorię</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>



<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    <script>
        document.querySelector('form').addEventListener('submit', function () {
            console.log('Wysłane dane:');
            console.log('Id:', document.querySelector('input[name="Id"]').value);
            console.log('Name:', document.querySelector('input[name="Name"]').value);
        });
    </script>
}

