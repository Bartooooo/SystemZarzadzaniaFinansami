@{
    ViewData["Title"] = "Generowanie raportu";
}

<h1>Generowanie Raportu</h1>

<form asp-action="GenerateReport" method="post">
    <div class="form-group">
        <label for="startDate">Data początkowa:</label>
        <input type="date" id="startDate" name="startDate" value="@DateTime.Now.AddDays(-30).ToString("yyyy-MM-dd")" required />
        <small class="form-text text-muted">Wprowadź datę początkową</small>
    </div>
    <div class="form-group">
        <label for="endDate">Data końcowa:</label>
        <input type="date" id="endDate" name="endDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
        <small class="form-text text-muted">Wprowadź datę końcową</small>
    </div>

    <div class="form-group">
        <label for="categoryId">Wybierz kategorię:</label>
        <select id="categoryId" name="categoryId" class="form-control">
            <option value="">Wszystkie kategorie</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <small class="form-text text-muted">Wybierz z jakich kategorii chcesz wygenerować raport</small>
    </div>

    <div class="form-group">
        <label for="reportType">Typ raportu:</label>
        <select id="reportType" name="reportType" class="form-control">
            <option value="all">Finansowy</option>
            <option value="incomes">Przychody</option>
            <option value="expenses">Wydatki</option>
        </select>
        <small class="form-text text-muted">Wybierz jaki typ raportu chcesz wygenerować</small>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Generuj Raport</button>
    </div>
</form>
